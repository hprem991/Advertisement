<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="Review" table="Review">
<meta attribute="class-description"> This class contains the Review detail.
</meta>
	<id name="id" type="int" column="id">
		<generator class="native"/> </id>
	<property name="Advertisement" column="ADVERTISEMENT" type="int"/> 
	<property name="username" column="USERNAME" type="string"/> 
	<property name="description" column="DESCRIPTION" type="string"/>
	<property name="reason" column="REASON" type="string"/> 
	<property name="rating" column="RATING" type="int"/>
	<property name="approval" column="APPROVAL" type="boolean"/> 
   </class>
</hibernate-mapping>